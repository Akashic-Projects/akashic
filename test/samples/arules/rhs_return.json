{
    "rule-name": "Test_count_rule",
    "salience": 100,
    "when": [
        { "?other_course=": "Course.id"},
        { "?msg=": "1 + Course.id / 2 + 1 "},
        { "?result<-": "[Course.id - ?other_course > 2]"}

    ],
    "then": [
        {
           "return": {
               "MSG": "?msg",
               "C2": "?result.id"
            }
        }
    ]
}