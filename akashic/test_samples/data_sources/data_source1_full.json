{
    "data-source-group-name": "Student service group",
    "data-source-definitions": [
        {
            "data-source-definition-name": "UserCourses data source",
            "model-name": "UserCourse",
            "model-description": "Holds data concearning individual student and course he is attending",

            "authentication-header": {
                "auth-header-name": "Authentication",
                "token-prefix": "bearer",
                "token": "4tfrwf-34wfwfwrfw4fw4ffw4fe"
            },

            "additional-headers": [
                {
                    "header-name": "Content-Type",
                    "header-value": "application/json"
                }
            ],

            "fields": [
                {
                    "field-name": "id",
                    "type": "NUMBER",
                    "use-as": "primary-key",
                    "json_path": "$.data.id"
                },
                {
                    "field-name": "user_id",
                    "type": "NUMBER",
                    "use-as": "foreign-key",
                    "referenced-foreign-model-name": "User",
                    "referenced-foreign-field-name": "id",
                    "json_path": "$.data.user_id"
                },
                {
                    "field-name": "course_id",
                    "type": "NUMBER",
                    "use-as": "foreign-key",
                    "referenced-foreign-model-name": "Course",
                    "referenced-foreign-field-name": "id",
                    "json_path": "$.data.course_id"
                },
                {
                    "field-name": "rating",
                    "type": "NUMBER",
                    "use-as": "data",
                    "json_path": "$.data.rating"
                }
            ],

            "apis": [
                {
                    "operation": "create",
                    "method": "POST",
                    "url-map": "http://localhost:80/api/users/${user_id}/courses",
                    "referenced-foreign-models": [
                        {
                            "model-name": "User",
                            "field-name": "id",
                            "url-palcement": "user_id"
                        }
                    ]
                },
                {
                    "operation": "read-one",
                    "method": "GET",
                    "url-map": "http://localhost:80/api/users/${user_id}/courses/${id}",
                    "referenced-foreign-models": [
                        {
                            "model-name": "User",
                            "field-name": "id",
                            "url-placement": "user_id"
                        }
                    ],
                    "data-indexing-url-placement": "id"
                },
                {
                    "operation": "read-multiple",
                    "method": "GET",
                    "url-base": "http://localhost:80/api/users/${user_id}/courses?pageIndex=${pageIndex}&pageRowCount=${pageRowCount}&searchFields=${searchFields}&searchStrings=${searchStrings}&sortField=${sortField}&sortOrder=${sortOrder}",
                    "referenced-foreign-models": [
                        {
                            "model-name": "User",
                            "field-name": "id",
                            "url-palcement": "user_id"
                        }
                    ],
                    "page-index-url-palcement": "pageIndex",
                    "page-row-count-url-palcement": "pageRowCount",

                    "search-fields-url-palcement": "searchFields",
                    "search-fields-url-delimiter": ",",

                    "search-strings-url-palcement": "searchStrings",
                    "search-strings-url-delimiter": ",",

                    "sort-field-url-palcement": "sortField",
                    "sort-order-url-palcement": "sortOrder"
                },
                {
                    "operation": "update",
                    "method": "PUT",
                    "url-map": "http://localhost:80/api/users/${user_id}/courses/${id}",
                    "referenced-foreign-models": [
                        {
                            "model-name": "User",
                            "field-name": "id",
                            "url-palcement": "user_id"
                        }
                    ],
                    "data-indexing-url-placement": "id"
                },
                {
                    "operation": "delete",
                    "method": "DELETE",
                    "url-map": "http://localhost:80/api/users/${user_id}/courses/${id}",
                    "referenced-foreign-models": [
                        {
                            "model-name": "User",
                            "field-name": "id",
                            "url-palcement": "user_id"
                        }
                    ],
                    "data-indexing-url-placement": "id"
                }
            ]
        }
    ]
}